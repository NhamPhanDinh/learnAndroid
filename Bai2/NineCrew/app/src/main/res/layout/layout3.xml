<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5">

        <Button
            android:id="@+id/fb_login_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/small_btn_width_common"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/small_margin_layout3"
            android:background="@drawable/fb_button"
            android:text="@string/login_with_facebook_layout3"
            android:textColor="@color/white"
            android:textSize="@dimen/button_size_layout3" />

        <TextView
            android:id="@+id/or_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fb_login_button"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/small_margin_layout3"
            android:text="@string/or_layout3"
            android:textSize="@dimen/textview_size_layout3" />

        <TextView
            android:id="@+id/email_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/or_textview"
            android:layout_marginTop="@dimen/small_margin_layout3"
            android:text="@string/email_layout3"
            android:textSize="@dimen/textview_size_layout3" />

        <EditText
            android:id="@+id/email_edt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/small_btn_width_common"
            android:layout_below="@+id/email_textview"
            android:textSize="@dimen/textview_size_layout3" />

        <TextView
            android:id="@+id/password_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/email_edt"
            android:layout_marginTop="@dimen/small_margin_layout3"
            android:text="@string/password_layout3"
            android:textSize="@dimen/textview_size_layout3" />

        <EditText
            android:id="@+id/password_edt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/small_btn_width_common"
            android:layout_below="@+id/password_textview"
            android:textSize="@dimen/textview_size_layout3" />

        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/small_btn_width_common"
            android:layout_below="@+id/password_edt"
            android:layout_marginTop="@dimen/small_margin_layout3"
            android:background="@color/cyan"
            android:text="@string/login_layout3"
            android:textColor="@color/white"
            android:textSize="@dimen/button_size_layout3" />

        <TextView
            android:id="@+id/forgot_password_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_button"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/small_margin_layout3"
            android:text="@string/forgot_password_layout3"
            android:textSize="@dimen/textview_size_layout3" />
    </RelativeLayout>


</LinearLayout>